---
import { Icon } from 'astro-icon/components';

const {
  icon = 'tabler:info-square',
  title = 'Core Message',
  message = 'From PLC logic to cloud insights â€” your end-to-end Industrial Automation & IIoT partner.',
} = Astro.props;

const content = await Astro.slots.render('default');
---

<section class="bg-blue-50 dark:bg-slate-800 not-prose">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 py-6">
    <div class="flex flex-col items-center gap-3 text-center">
      <div
        class="flex items-center gap-2 text-sm font-semibold uppercase tracking-wide text-blue-900 dark:text-blue-200"
      >
        {icon && <Icon name={icon} class="w-5 h-5" />}
        <span>{title}</span>
      </div>
      <div class="text-base leading-relaxed text-slate-700 dark:text-slate-100">
        {content ? <Fragment set:html={content} /> : <span>{message}</span>}
      </div>
    </div>
  </div>
</section>
