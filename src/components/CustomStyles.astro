---
import '@fontsource-variable/inter';
import '@fontsource/space-grotesk';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Inter Variable'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(0, 130, 255);   /* Bright blue */
    --aw-color-secondary: rgb(0, 200, 255); /* Bright cyan */
    --aw-color-accent: rgb(124, 58, 237);   /* Vibrant purple */

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(249, 250, 251);  /* Very light gray with slight blue tint */

    --aw-color-bg-page-dark: rgb(10, 15, 30);  /* Deep blue-gray */

    ::selection {
      background-color: var(--aw-color-accent);
      color: white;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(0, 130, 255);   /* Bright blue */
    --aw-color-secondary: rgb(0, 200, 255); /* Bright cyan */
    --aw-color-accent: rgb(124, 58, 237);   /* Vibrant purple */

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229, 236, 246);
    --aw-color-text-muted: rgb(229, 236, 246 / 66%);
    --aw-color-bg-page: rgb(10, 15, 30);  /* Deep blue-gray */

    ::selection {
      background-color: var(--aw-color-accent);
      color: white;
    }
  }

  /* Modern tech/crypto-inspired effects */
  .tech-gradient-text {
    background: linear-gradient(90deg, var(--aw-color-primary), var(--aw-color-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
  }

  .tech-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(8px);
    border-radius: 12px;
    transition: all 0.3s ease;
  }

  .tech-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(var(--aw-color-primary-rgb), 0.3);
  }

  .dark .tech-card {
    background: rgba(0, 0, 0, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.05);
  }

  .dark .tech-card:hover {
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(var(--aw-color-primary-rgb), 0.3);
  }

  /* Add subtle glow effect to buttons in dark mode */
  .dark .btn-primary {
    box-shadow: 0 0 15px rgba(var(--aw-color-primary-rgb), 0.3);
  }

  .dark .btn-primary:hover {
    box-shadow: 0 0 25px rgba(var(--aw-color-primary-rgb), 0.5);
  }
</style>
