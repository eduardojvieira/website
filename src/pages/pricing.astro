---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Engagement Models & Pricing | Eduardo Vieira',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Pricing & Engagement"
    title="Engagement Models Tailored to Your Factory"
    subtitle="Every project starts with clear outcomes, transparent estimates, and a collaboration model that fits your automation or IIoT roadmap."
  />

  <!-- Content Widget ******************* -->

  <Content
    isReversed
    tagline="Approach"
    title="Pricing Built Around Measurable Outcomes"
    items={[
      {
        title: 'Discovery & Scoping',
        description:
          'We begin with a collaborative workshop to understand your processes, constraints, and success metrics before defining scope and deliverables.',
      },
      {
        title: 'Transparent Proposals',
        description:
          'You receive a detailed proposal covering architecture, milestones, handover assets, and pricing so stakeholders know exactly what is included.',
      },
      {
        title: 'Documented Deliverables',
        description:
          'PLC projects, SCADA builds, and IIoT integrations all ship with code repositories, schematics, SOPs, and training materials for long-term ownership.',
      },
    ]}
    image={{
      src: '~/assets/images/automation-benefits.jpg',
      alt: 'Planning industrial automation engagements',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Engagement Options"
    subtitle="Choose the collaboration model that aligns with your scope, timeline, and internal resources."
    columns={3}
    items={[
      {
        title: 'Project-Based Delivery',
        description:
          'Fixed-scope implementations with milestone-based billing for PLC programming, SCADA modernization, or IIoT rollouts.',
        icon: 'tabler:checkbox',
      },
      {
        title: 'Time & Materials Support',
        description:
          'Flexible hourly or daily support for troubleshooting, feature additions, commissioning, and maintenance tasks.',
        icon: 'tabler:clock',
      },
      {
        title: 'Strategic Retainers',
        description:
          'Reserved hours each month dedicated to continuous improvement, analytics, and long-term automation roadmaps.',
        icon: 'tabler:calendar-time',
      },
    ]}
  />

  <!-- Content Widget ******************* -->

  <Content
    isAfterContent
    tagline="What’s Included"
    title="Every Engagement Includes"
    items={[
      {
        title: 'Engineering Artifacts',
        description:
          'Version-controlled code, electrical schematics, data models, and documentation tailored to your internal standards.',
      },
      {
        title: 'Knowledge Transfer',
        description:
          'Training sessions in English or Spanish, operator handbooks, and recorded walkthroughs so teams can sustain the solution.',
      },
      {
        title: 'Post-Go-Live Support',
        description:
          'Stabilization assistance and optional ongoing support to monitor performance, roll out enhancements, and plan the next phase.',
      },
    ]}
    image={{
      src: '~/assets/images/industrial-benefits.jpg',
      alt: 'Deliverables for industrial automation projects',
    }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="How Pricing Is Developed"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Discovery Call</span>',
        description:
          'Review your current infrastructure, business drivers, and timelines to confirm objectives and stakeholders.',
        icon: 'tabler:clipboard-data',
      },
      {
        title: 'Step 2: <span class="font-medium">Architecture & Estimation</span>',
        description:
          'Outline the technical approach, effort, and sequencing required for each deliverable and integration point.',
        icon: 'tabler:layout-board',
      },
      {
        title: 'Step 3: <span class="font-medium">Proposal Review</span>',
        description:
          'Walk through the proposal together, adjust scope if needed, and align on schedule, budget, and collaboration model.',
        icon: 'tabler:clipboard-check',
      },
      {
        title: 'Step 4: <span class="font-medium">Kickoff & Execution</span>',
        description:
          'Kick off the project with clear milestones, communication cadence, and change-management process.',
        icon: 'tabler:rocket',
      },
    ]}
    image={{
      src: '~/assets/images/automation.jpg',
      alt: 'Industrial automation project planning',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Pricing FAQs"
    subtitle="Common questions about budgets, billing, and collaboration."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Do you publish standard rates?',
        description:
          'Every engagement is scoped based on complexity, risk, and deliverables. After discovery, I share a transparent proposal with estimated hours or fixed fees.',
      },
      {
        title: 'Can we start with a smaller pilot?',
        description:
          'Yes. Many teams begin with a pilot line or proof of concept to validate architecture and ROI before scaling to other assets.',
      },
      {
        title: 'How are travel costs handled?',
        description:
          'Most work is delivered remotely. When on-site support is required, travel expenses are pre-approved and billed at cost.',
      },
      {
        title: 'Do you work with procurement or vendor portals?',
        description:
          'I regularly collaborate with corporate procurement teams and can onboard through vendor portals, NDAs, and compliance reviews.',
      },
      {
        title: 'Can we bundle multiple services together?',
        description:
          'Absolutely. PLC, HMI, IIoT, and panel design efforts are often combined into a single roadmap with phased milestones.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Request a proposal',
        href: '/contact',
        icon: 'tabler:mail',
      },
      {
        text: 'Review portfolio',
        href: '/portfolio',
      },
    ]}
  >
    <Fragment slot="title">Ready to scope your next automation project?</Fragment>

    <Fragment slot="subtitle">
      Share your goals and constraints, and I’ll prepare a transparent proposal aligned with your business outcomes.
    </Fragment>
  </CallToAction>
</Layout>
