---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/HeroCustom.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';

const metadata = {
  title: 'Eduardo Vieira — Industrial Automation & Embedded Systems Engineer',
  ignoreTitleTemplate: true,
};

---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="PLC Programming | IoT Solutions | Control Systems | Mechanical Engineering"
    actions={[
      {
        variant: 'primary',
        text: 'Contact Me',
        href: '/contact',
        icon: 'tabler:mail',
      },
      { text: 'Services I Offer', href: '/services', icon: 'tabler:device-desktop-code' },
    ]}
    image={{ src: '~/assets/images/panel.png', alt: 'Industrial Automation Control Panel' }}
  >
    <Fragment slot="title">
      Industrial Automation, Mechanical Engineering & <span class="text-accent dark:text-white highlight">Embedded Systems Engineer</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Hi, I'm Eduardo!</span> A freelance Mechanical Engineer with expertise in industrial control systems, embedded software development (Arduino, ESP32, STM32), Raspberry Pi programming, PLC integration, Industrial HMIs, Industrial cloud integration, IoT, 3D CAD Modeling, Rendering and Simulation.</span
      >
      <span class="block mb-1 sm:hidden font-bold text-blue-600">Industrial Automation & Embedded Systems Expert</span>
      With over 6 years of experience designing, developing and integrating industrial machinery, mechanical design, industrial control systems and embedded solutions, I create reliable, cost-effective systems that streamline manufacturing and production processes.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note>
    <Fragment slot="content">
      <span class="font-bold">100% Job Success Score</span> on Upwork with consistent 5-star client ratings
    </Fragment>
  </Note>

  <!-- Features Widget *************** -->

  <Features
    id="skills"
    tagline="Expertise"
    title="Key Skills & Specializations"
    subtitle="Leveraging a diverse technical skillset to deliver comprehensive solutions for industrial automation and control systems."
    items={[
      {
        title: 'Industrial Automation',
        description:
          'End-to-end design, development, and deployment of industrial systems, including PLC integration, sensor data acquisition, and real-time process control.',
        icon: 'tabler:robot',
      },
      {
        title: 'Embedded Systems Development',
        description:
          'Designing and programming embedded systems using Arduino, ESP32, STM32, Raspberry Pi Pico, and other microcontrollers for industrial and IoT applications.',
        icon: 'tabler:device-laptop',
      },
      {
        title: 'Raspberry Pi Development',
        description:
          'Kiosk-mode applications, customized Linux builds, and hardware integration for industrial environments with a focus on reliability and performance.',
        icon: 'tabler:device-desktop',
      },
      {
        title: 'Web-Based HMI',
        description:
          'Creating intuitive, real-time interfaces for machine operation and monitoring using Node.js, Angular, and other web technologies.',
        icon: 'tabler:device-analytics',
      },
      {
        title: 'MQTT / IoT',
        description:
          'Setting up secure, low-latency IoT communication for industrial controllers, bridging data between the cloud and shop-floor devices.',
        icon: 'tabler:cloud',
      },
      {
        title: 'Mechanical Engineering',
        description:
          'Creating 3D models, analyzing and simulating for product development, testing designs with FEA, and creating engineering drawings for manufacturing.',
        icon: 'tabler:tools',
      },
      {
        title: 'Programming Languages',
        description:
          'Proficient in C/C++ for embedded systems, Python, Linux systems programming, MQTT protocol implementation, and specialized in developing firmware and software for industrial applications.',
        icon: 'tabler:code',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
  isReversed
  tagline="Professional Experience"
  title="Engineering Excellence in Action"
  items={[
    {
      title: 'Industrial Automation & HMI Systems',
      description:
        'Developed sophisticated control systems with intuitive web-based HMIs, enabling operators to monitor and control complex manufacturing processes with minimal training while increasing production efficiency by 30%.',
    },
    {
      title: 'IoT & Embedded Solutions',
      description:
        'Created smart industrial networks using ESP32, STM32, and Arduino platforms, connecting sensors and actuators to deliver real-time data visualization and remote control capabilities for mission-critical operations.',
    },
    {
      title: 'Cloud Integration & Data Analytics',
      description:
        'Implemented secure MQTT-based communication systems that bridge shop floor equipment with AWS/Azure cloud platforms, enabling predictive maintenance, performance analytics, and mobile monitoring dashboards.',
    },
    {
        title: 'Mechanical Design & Integration',
        description:
          'Combined mechanical engineering expertise with control system design to create fully integrated solutions, from 3D modeling and simulation to physical implementation and commissioning.',
      },
  ]}
  image={{
    src: 'https://images.unsplash.com/photo-1581092918056-0c4c3acd3789?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
    alt: 'Industrial Control System',
  }}
></Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Proven Track Record',
        description: 'Successfully transitioned multiple pilot projects into stable, production-level deployments in industrial settings with a focus on reliability.',
      },
      {
        title: 'Clear Communication',
        description:
          'Excel at coordinating with cross-functional teams—mechanical, electrical, and software engineers—to keep projects running smoothly and on schedule.',
      },
      {
        title: 'Remote Collaboration',
        description:
          "Experienced in working remotely with teams across different time zones, ensuring effective communication and project delivery regardless of location.",
      },
      {
        title: 'Continuous Improvement',
        description:
          'Committed to ongoing learning and improvement, staying current with the latest technologies and best practices in industrial automation.',
      },
    ]}
    image={{
      src: '~/assets/images/plc.jpg',
      alt: 'Engineering Workspace',
    }}
  >
    <Fragment slot="content">Why clients choose to work with me</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="My Approach to Industrial Automation Projects"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Consultation</span>',
        description:
          "I begin with a thorough consultation to understand your specific needs, challenges, and objectives. This foundation ensures the solution addresses your exact requirements and business goals.",
        icon: 'tabler:message-circle',
      },
      {
        title: 'Step 2: <span class="font-medium">Design & Planning</span>',
        description:
          "Based on our consultation, I create a detailed system design and project plan. This includes hardware selection, software architecture, and integration strategies tailored to your environment.",
        icon: 'tabler:ruler-2',
      },
      {
        title: 'Step 3: <span class="font-medium">Implementation</span>',
        description:
          'I develop and implement the solution according to the agreed specifications, with regular progress updates and testing at each stage to ensure quality and alignment with requirements.',
        icon: 'tabler:code',
      },
      {
        title: 'Step 4: <span class="font-medium">Training & Support</span>',
        description:
          "After successful deployment, I provide comprehensive training for your team and ongoing support to ensure the system continues to meet your needs as your business evolves.",
        icon: 'tabler:headset',
      },
    ]}
    image={{
      src: '~/assets/images/automation.jpg',
      alt: 'Industrial Automation Process',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="My Project Approach"
    subtitle="A methodical process that ensures successful delivery of industrial automation and control systems"
    tagline="Methodology"
    items={[
      {
        title: 'Requirements Analysis',
        description: "I begin by thoroughly understanding your specific needs, challenges, and objectives to create a tailored solution.",
        icon: 'tabler:file-description',
      },
      {
        title: 'System Design',
        description:
          "Developing comprehensive system architecture that addresses all requirements while ensuring scalability and reliability.",
        icon: 'tabler:template',
      },
      {
        title: 'Hardware Selection',
        description:
          'Choosing the optimal components and equipment based on performance needs, environmental conditions, and budget constraints.',
        icon: 'tabler:circuit-capacitor',
      },
      {
        title: 'Software Development',
        description:
          "Creating efficient, maintainable code for PLCs, embedded systems (Arduino, ESP32, STM32, Raspberry Pi Pico), Raspberry Pi, and web interfaces that meets all functional requirements.",
        icon: 'tabler:devices',
      },
      {
        title: 'Integration & Testing',
        description:
          'Thorough testing of all components individually and as a system to ensure reliable operation under various conditions.',
        icon: 'tabler:checklist',
      },
      {
        title: 'Documentation',
        description: 'Comprehensive documentation of all aspects of the system for future reference, maintenance, and training.',
        icon: 'tabler:list-details',
      },
      {
        title: 'Deployment',
        description: 'Careful implementation of the system in your production environment with minimal disruption to operations.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Training & Support',
        description:
          'Providing training for your team and ongoing support to ensure the system continues to meet your needs over time.',
        icon: 'tabler:headset',
      },
      {
        title: 'Continuous Improvement',
        description:
          'Regular evaluation and updates to optimize performance, add new features, and adapt to changing requirements.',
        icon: 'tabler:database',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Latest Insights from My Blog"
    information={`Stay updated with the latest trends and insights in industrial automation, programming, and engineering. 
                        I regularly share technical articles, project case studies, and industry best practices to help you stay ahead in the rapidly evolving field of automation technology.
                `}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Common questions about my services, process, and expertise in industrial automation and engineering."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'What types of projects do you specialize in?',
        description:
          "I specialize in industrial automation projects, particularly those involving PLC programming, Raspberry Pi development, web-based HMIs, and IoT connectivity. I also have expertise in mechanical engineering and CAD design using SolidWorks.",
      },
      {
        title: 'How do you handle remote collaboration?',
        description:
          'I have extensive experience working remotely with clients worldwide. I use a combination of regular video meetings, detailed documentation, and collaborative tools to ensure clear communication and successful project delivery regardless of location.',
      },
      {
        title: 'What is your typical project process?',
        description:
          "My process typically includes requirements analysis, solution design, implementation, testing, and deployment, followed by ongoing support. I provide regular updates throughout the project and ensure all deliverables meet the agreed specifications.",
      },
      {
        title: "Do you provide ongoing support after project completion?",
        description:
          "Yes, I offer ongoing support and maintenance services to ensure your systems continue to operate efficiently. This includes troubleshooting, updates, and improvements as needed to keep your systems running smoothly.",
      },
      {
        title: 'What programming languages and technologies do you work with?',
        description:
          "I'm proficient in Python, C, MATLAB, JavaScript, Node.js, and Angular. For industrial automation, I work with various PLC platforms, MQTT, Modbus, and other industrial protocols. I also have experience with Linux system administration and edge computing.",
      },
      {
        title: 'How do you ensure the reliability of industrial systems?',
        description:
          "I implement robust error handling, continuous monitoring, and user-friendly update mechanisms in production environments. My systems are designed with redundancy and fault tolerance in mind, and undergo rigorous testing before deployment.",
      },
    ]}
  />

  <!-- Testimonials Widget *********** -->

  <Testimonials
    title="Client Testimonials from Upwork"
    subtitle="These are genuine reviews from clients on my <a href='https://www.upwork.com/freelancers/~01f21c52fa13e6a195' class='text-primary hover:underline' target='_blank'>Upwork Profile</a>, where I maintain a 100% Job Success Score."
    testimonials={[
      {
        testimonial: `I've worked with Eduardo several times and give him my highest recommendation! He's timely, communicates very well and always does an excellent job!`,
        name: 'CAD Design Client',
        job: 'Project completed February 2019',
      },
      {
        testimonial: `Eduardo is an outstanding freelancer and easily one of the best I've ever worked with! I will continue to use him and look forward to a long term working relationship.`,
        name: 'SolidWorks Client',
        job: 'Project completed October 2018',
      },
      {
        testimonial: `Eduardo is amazing. Understands 100% what needs to be done, and delivers. He's a bit shy about his English but I found his English communication skills to be excellent.`,
        name: 'Programming Client',
        job: 'Project completed April 2016',
      },
    ]}
    callToAction={{
      target: '_blank',
      text: 'View my Upwork profile',
      href: 'https://www.upwork.com/freelancers/~01f21c52fa13e6a195',
      icon: 'tabler:external-link',
    }}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Years Experience', amount: '6+' },
      { title: 'Client Satisfaction', amount: '100%' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Contact Me',
        href: '/contact',
        icon: 'tabler:mail',
      },
      {
        text: 'View Portfolio',
        href: '/portfolio',
      },
    ]}
  >
    <Fragment slot="title">
      Let's Work Together
    </Fragment>

    <Fragment slot="subtitle">
      Ready to enhance your industrial automation systems? <br class="hidden md:inline" />Contact me today to discuss how I can help with your next project.
    </Fragment>
  </CallToAction>
</Layout>
