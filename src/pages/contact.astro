---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';

const metadata = {
  title: 'Contact | Eduardo Vieira - Industrial Automation & Embedded Systems Engineer',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Discuss Your Project" />

  <Content
    isReversed
    tagline="How I Work"
    title="A Simple Process to Get Started"
    items={[
      {
        title: '1. Initial Consultation',
        description:
          'We begin with a free consultation to discuss your needs, challenges, and objectives. This helps me understand your specific requirements and determine how I can best assist you.',
      },
      {
        title: '2. Proposal & Planning',
        description:
          'Based on our discussion, I will provide a detailed proposal outlining the scope, timeline, and cost of your project. Once approved, we will develop a comprehensive plan for implementation.',
      },
      {
        title: '3. Development & Implementation',
        description:
          'I will develop your automation solution according to the agreed specifications, keeping you informed throughout the process with regular updates and progress reports.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1600880292203-757bb62b4baf?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Engineering consultation with blueprints',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Additional Contact Information"
    subtitle="Feel free to reach out through any of these channels"
    items={[
      {
        title: 'Email',
        description: 'me@eduardovieira.dev',
        icon: 'tabler:mail',
      },
      {
        title: 'LinkedIn',
        description: 'Connect with me on LinkedIn for professional networking',
        icon: 'tabler:brand-linkedin',
        callToAction: {
          text: 'Connect',
          href: 'https://www.linkedin.com/in/eduardojvieira',
          target: '_blank',
        },
      },
      {
        title: 'Upwork',
        description: 'View my profile and reviews on Upwork',
        icon: 'tabler:brand-upwork',
        callToAction: {
          text: 'View Profile',
          href: 'https://www.upwork.com/freelancers/~01f21c52fa13e6a195',
          target: '_blank',
        },
      },
      {
        title: 'GitHub',
        description: 'Check out my code repositories and contributions',
        icon: 'tabler:brand-github',
        callToAction: {
          text: 'View Projects',
          href: 'https://github.com/eduardojvieira',
          target: '_blank',
        },
      },
      {
        title: 'Response Time',
        description: 'I typically respond to all inquiries within 24 hours',
        icon: 'tabler:clock',
      },
      {
        title: 'Location',
        description: 'Based in Argentina, working with clients worldwide',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
