---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';

const metadata = {
  title: 'Contact | Eduardo Vieira - Industrial Automation & IIoT Engineer',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Contact"
    title="Let's Build the Future of Your Factory"
    subtitle="Whether you need PLC programming, SCADA modernization, or a plant-wide IIoT strategy, I’m ready to help you move from concept to production."
  />

  <Content
    isReversed
    tagline="Getting Started"
    title="A Clear, Collaborative Engagement Process"
    items={[
      {
        title: '1. Discovery Call',
        description:
          'We review your current systems, pain points, and desired outcomes to confirm scope and success metrics.',
      },
      {
        title: '2. Proposal & Architecture',
        description:
          'You receive a detailed proposal outlining deliverables, milestones, and recommended technologies for your environment.',
      },
      {
        title: '3. Delivery & Support',
        description:
          'I execute the work with regular progress updates, documentation, and optional ongoing support packages.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1600880292203-757bb62b4baf?auto=format&fit=crop&w=2070&q=80',
      alt: 'Engineering consultation with blueprints',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="How to Reach Me"
    subtitle="Let’s align on your automation and IIoT priorities."
    items={[
      {
        title: 'Email',
        description: 'me@eduardovieira.dev',
        icon: 'tabler:mail',
      },
      {
        title: 'LinkedIn',
        description: 'Connect for project discussions and updates.',
        icon: 'tabler:brand-linkedin',
        callToAction: {
          text: 'Connect',
          href: 'https://www.linkedin.com/in/eduardojv/',
          target: '_blank',
        },
      },
      {
        title: 'Upwork',
        description: 'Review my 100% Job Success Score and client feedback.',
        icon: 'tabler:brand-upwork',
        callToAction: {
          text: 'View Profile',
          href: 'https://www.upwork.com/freelancers/eduardojv',
          target: '_blank',
        },
      },
      {
        title: 'Languages',
        description: 'Native Spanish speaker fluent in English for seamless collaboration across teams.',
        icon: 'tabler:language',
      },
      {
        title: 'Time Zones',
        description: 'Based in Argentina (UTC-3) with availability for North American and European schedules.',
        icon: 'tabler:clock',
      },
      {
        title: 'Response Time',
        description: 'Most inquiries are answered within one business day.',
        icon: 'tabler:message-circle',
      },
    ]}
  />
</Layout>
