---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Professional Services | Eduardo Vieira',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Services"
    title="Industrial Automation & Embedded Systems Solutions"
    subtitle="Expert engineering services for industrial automation, embedded systems development, and mechanical design to optimize your operations and accelerate innovation."
    actions={[{ variant: 'primary', text: 'Contact me', href: '/contact' }]}
    image={{
      src: '~/assets/images/industrial-automation.jpg',
      alt: 'Industrial Automation Engineering',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Professional Services"
    subtitle="Comprehensive engineering solutions tailored to your industrial and technical requirements."
    columns={3}
    items={[
      {
        title: 'Industrial Automation',
        description:
          'End-to-end design, development, and deployment of industrial control systems, including PLC integration, sensor networks, and real-time process control for manufacturing environments.',
        icon: 'tabler:robot',
      },
      {
        title: 'Embedded Systems Development',
        description:
          'Custom firmware and hardware solutions for specialized applications, from concept to production. Expertise in microcontrollers, SBCs, and IoT devices with a focus on reliability in industrial settings.',
        icon: 'tabler:device-desktop-analytics',
      },
      {
        title: 'Raspberry Pi Solutions',
        description: 
          'Specialized development of industrial-grade Raspberry Pi applications including kiosk-mode interfaces, custom OS builds, and hardware integration for monitoring and control systems.',
        icon: 'tabler:cpu',
      },
      {
        title: 'Web-Based HMI Development',
        description:
          'Creation of intuitive, responsive Human-Machine Interfaces using modern web technologies (Node.js, Angular) for real-time monitoring and control of industrial equipment and processes.',
        icon: 'tabler:device-desktop',
      },
      {
        title: 'PLC Programming & Integration',
        description:
          'Expert programming of industrial PLCs for process automation, with integration capabilities for connecting legacy and modern equipment into cohesive control systems.',
        icon: 'tabler:device-analytics',
      },
      {
        title: 'Mechanical Engineering & Design',
        description:
          'Comprehensive CAD design, simulation, and analysis services using SolidWorks and other tools, with expertise in 3D modeling, surface design, and manufacturing optimization.',
        icon: 'tabler:3d-cube-sphere',
      },
      {
        title: 'IoT & MQTT Systems',
        description:
          'Design and implementation of secure Industrial IoT architectures using MQTT and other protocols to enable seamless data flow between shop-floor equipment and cloud platforms.',
        icon: 'tabler:cloud-computing',
      },
      {
        title: 'Industrial Systems Integration',
        description:
          'Bridging legacy equipment with modern control systems, enabling data exchange between disparate platforms, and creating unified monitoring solutions across your facility.',
        icon: 'tabler:plug-connected',
      },
      {
        title: 'Custom Software Development',
        description:
          'Development of specialized software solutions for industrial applications using Python, C, MATLAB, and JavaScript to solve unique automation and data processing challenges.',
        icon: 'tabler:code',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[
      {
        title: 'Expert Domain Knowledge',
        description:
          'With over 6 years of specialized experience in industrial environments, I bring deep technical understanding and practical solutions to complex automation challenges.',
        icon: 'tabler:certificate',
      },
      {
        title: 'End-to-End Implementation',
        description:
          'From initial concept and design through development, testing, and deployment, I provide comprehensive project management and execution for seamless delivery.',
        icon: 'tabler:layout-kanban',
      },
      {
        title: 'Cost-Effective Solutions',
        description:
          'Expertise in leveraging modern technologies like Raspberry Pi and open-source platforms to create robust industrial solutions at a fraction of traditional costs.',
        icon: 'tabler:coin',
      },
      {
        title: 'Reliability-Focused Design',
        description:
          'Every solution is engineered with industrial reliability in mind, including robust error handling, continuous monitoring, and fault recovery mechanisms.',
        icon: 'tabler:shield-check',
      },
    ]}
    image={{
      src: '~/assets/images/automation-benefits.jpg',
      alt: 'Industrial Automation Benefits',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Why Choose My Services</h3>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Production Efficiency',
        description:
          'Automated systems dramatically reduce manual intervention, minimize errors, and optimize throughput, leading to significant productivity gains.',
        icon: 'tabler:chart-arrows',
      },
      {
        title: 'Real-time Monitoring',
        description:
          'Gain complete visibility into your operations with customized dashboards and alerts, enabling data-driven decisions and proactive maintenance.',
        icon: 'tabler:device-analytics',
      },
      {
        title: 'System Integration',
        description:
          'Connect disparate systems and equipment into a cohesive network, breaking down data silos and enabling seamless information flow across your operation.',
        icon: 'tabler:puzzle',
      },
      {
        title: 'Future-proof Architecture',
        description:
          'Solutions designed with scalability and adaptability in mind, allowing your systems to evolve as technology advances and business needs change.',
        icon: 'tabler:rocket',
      },
    ]}
    image={{
      src: '~/assets/images/industrial-benefits.jpg',
      alt: 'Benefits of Industrial Automation',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Benefits for Your Business</h3>
    </Fragment>
  </Content>

  <!-- Testimonials Widget *********** -->

  <Testimonials
    title="Client Testimonials from Upwork"
    subtitle="These are genuine reviews from clients on my <a href='https://www.upwork.com/freelancers/~01f21c52fa13e6a195' class='text-primary hover:underline' target='_blank'>Upwork Profile</a>, where I maintain a 100% Job Success Score."
    testimonials={[
      {
        testimonial: `I've worked with Eduardo several times and give him my highest recommendation! He's timely, communicates very well and always does an excellent job!`,
        name: 'CAD Design Client',
        job: 'Project completed February 2019',
      },
      {
        testimonial: `Eduardo is an outstanding freelancer and easily one of the best I've ever worked with! I will continue to use him and look forward to a long term working relationship.`,
        name: 'SolidWorks Client',
        job: 'Project completed October 2018',
      },
      {
        testimonial: `Eduardo is amazing. Understands 100% what needs to be done, and delivers. He's a bit shy about his English but I found his English communication skills to be excellent.`,
        name: 'Programming Client',
        job: 'Project completed April 2016',
      },
    ]}
    callToAction={{
      target: '_blank',
      text: 'View my Upwork profile',
      href: 'https://www.upwork.com/freelancers/~01f21c52fa13e6a195',
      icon: 'tabler:external-link',
    }}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Ready to optimize your industrial operations?"
    subtitle="Let's discuss how my expertise in industrial automation and embedded systems can help solve your technical challenges."
    actions={[
      {
        variant: 'primary',
        text: 'Contact me',
        href: '/contact',
      },
    ]}
  />
</Layout>
