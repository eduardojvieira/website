---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';

const metadata = { title: 'Contato | Eduardo Vieira - Automação & IIoT' };
---

<Layout metadata={metadata}>
  <HeroText tagline="Contato" title="Vamos construir o futuro da sua fábrica" subtitle="PLC, SCADA ou estratégia IIoT: pronto para ajudar." />

  <Content
    isReversed
    tagline="Primeiros passos"
    title="Processo claro e colaborativo"
    items={[{ title: '1. Descoberta', description: 'Escopo e métricas de sucesso.' }, { title: '2. Proposta & Arquitetura', description: 'Entregáveis, marcos e tecnologias.' }, { title: '3. Entrega & Suporte', description: 'Atualizações, documentação e suporte.' }]}
    image={{ src: 'https://images.unsplash.com/photo-1600880292203-757bb62b4baf?auto=format&fit=crop&w=2070&q=80', alt: 'Consulta de engenharia' }}
  />

  <Features2
    title="Como falar comigo"
    subtitle="Vamos alinhar prioridades de automação e IIoT"
    items={[{ title: 'Email', description: 'me@eduardovieira.dev', icon: 'tabler:mail' }, { title: 'LinkedIn', description: 'Conectar para projetos.', icon: 'tabler:brand-linkedin', callToAction: { text: 'Conectar', href: 'https://www.linkedin.com/in/eduardojv/', target: '_blank' } }, { title: 'Upwork', description: 'Ver perfil e feedback.', icon: 'tabler:brand-upwork', callToAction: { text: 'Ver Perfil', href: 'https://www.upwork.com/freelancers/eduardojv', target: '_blank' } } ]}
  />
</Layout>



