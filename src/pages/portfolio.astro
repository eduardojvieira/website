---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Portfolio | Eduardo Vieira - Industrial Automation & Embedded Systems Engineer',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    title="My Portfolio"
    subtitle="Explore a selection of my recent projects in industrial automation, embedded systems, and control solutions."
  />

  <!-- Content Widget ******************* -->

  <Content
    isReversed
    tagline="Industrial Automation"
    title="Manufacturing Process Optimization"
    items={[
      {
        title: 'Challenge',
        description:
          'A food processing plant needed to improve production efficiency and reduce downtime in their packaging line.',
      },
      {
        title: 'Solution',
        description:
          'Implemented a comprehensive PLC-based control system with real-time monitoring and predictive maintenance alerts.',
      },
      {
        title: 'Results',
        description:
          'Increased production efficiency by 28% and reduced unplanned downtime by 35% within the first three months of implementation.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1581092160607-ee22731c9c64?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Industrial automation control panel',
    }}
  />

  <!-- Content Widget ******************* -->

  <Content
    isAfterContent
    tagline="Embedded Systems"
    title="IoT Environmental Monitoring System"
    items={[
      {
        title: 'Challenge',
        description:
          'A pharmaceutical company needed a reliable system to monitor environmental conditions in their storage facilities.',
      },
      {
        title: 'Solution',
        description:
          'Developed a custom IoT solution using ESP32 microcontrollers and MQTT protocol to monitor temperature, humidity, and air quality.',
      },
      {
        title: 'Results',
        description:
          'Provided real-time monitoring with automated alerts, ensuring compliance with regulatory requirements and preventing product loss.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1580983218765-f663bec07b37?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'IoT environmental monitoring system',
    }}
  />

  <!-- Content Widget ******************* -->

  <Content
    isReversed
    tagline="Web-Based HMI"
    title="Remote Equipment Monitoring Dashboard"
    items={[
      {
        title: 'Challenge',
        description:
          'A manufacturing company with multiple facilities needed a centralized way to monitor equipment performance across all locations.',
      },
      {
        title: 'Solution',
        description:
          'Created a responsive web-based HMI using Node.js and Angular that provides real-time equipment status, performance metrics, and historical data analysis.',
      },
      {
        title: 'Results',
        description:
          'Enabled remote monitoring and troubleshooting, reducing response time to issues by 65% and improving overall equipment effectiveness.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1581092334247-48398112a1ad?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Web-based HMI dashboard',
    }}
  />

  <!-- Content Widget ******************* -->

  <Content
    isAfterContent
    tagline="Raspberry Pi Solutions"
    title="Smart Factory Information Kiosk"
    items={[
      {
        title: 'Challenge',
        description:
          'A manufacturing plant needed an easy way to display production data and KPIs to floor workers without requiring access to computers.',
      },
      {
        title: 'Solution',
        description:
          'Developed a network of Raspberry Pi-powered information kiosks with custom Linux builds and touch interfaces displaying real-time production metrics.',
      },
      {
        title: 'Results',
        description:
          'Improved information accessibility on the factory floor, contributing to a 15% increase in productivity and better team coordination.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1581092160562-3bd09bde6efa?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Factory information kiosk',
    }}
  />

  <!-- Content Widget ******************* -->

  <Content
    isReversed
    tagline="Arduino/STM32 Development"
    title="Custom Motor Control System"
    items={[
      {
        title: 'Challenge',
        description:
          'A specialized equipment manufacturer needed a precise motor control system for a new product line with unique requirements.',
      },
      {
        title: 'Solution',
        description:
          'Designed and programmed a custom motor control system using STM32 microcontrollers with advanced PID algorithms and safety features.',
      },
      {
        title: 'Results',
        description:
          'Achieved precise motor control with 0.1% accuracy, enabling the client to launch their new product line on schedule and within budget.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1581092160757-a97e4b7061f0?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Custom motor control system',
    }}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Discuss Your Project',
        href: '/contact',
        icon: 'tabler:mail',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to enhance your industrial automation systems?
    </Fragment>

    <Fragment slot="subtitle">
      Contact me today to discuss how I can help you improve efficiency, reduce costs, and optimize your operations with custom automation and embedded solutions.
    </Fragment>
  </CallToAction>
</Layout>
